    = stylesheet_link_tag("ui_templates/animate", media: 'all')
    /! Icomoon Icon Fonts
    = stylesheet_link_tag("ui_templates/icomoon", media: 'all')
    /! Flexslider
    = stylesheet_link_tag("ui_templates/flexslider", media: 'all')
    /! Theme style
    = stylesheet_link_tag("ui_templates/style", media: 'all')

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'

  body


    #fh5co-page
      a.js-fh5co-nav-toggle.fh5co-nav-toggle href="#{users_path}"
        i
      aside#fh5co-aside  
        h1#fh5co-logo
          a href="/"  Comrade
        nav#fh5co-main-menu role="navigation" 
          ul
            - if current_user
              - if current_page?(users_path)
                li.fh5co-active
                  = link_to 'USER', users_path, method: :get
              - else
                li
                  = link_to 'USER', users_path, method: :get

              - if current_page?(user_path(current_user.id))
                li.fh5co-active
                  = link_to 'MY PAGE', user_path(current_user.id), method: :get
              - else
                li
                  = link_to 'MY PAGE', user_path(current_user.id), method: :get
              - if current_page?(survfields_index_path)
                li.fh5co-active
                  = link_to 'search field', survfields_index_path, method: :get
              - else
                li
                  = link_to 'search field', survfields_index_path, method: :get
              - if current_page?(went_survfields_path)
                li.fh5co-active
                  = link_to 'went field', went_survfields_path, method: :get
              - else
                li
                  = link_to 'went field', went_survfields_path, method: :get
              - if current_page?(regularmeetings_path) && @disp_plan == "on"
                li.fh5co-active
                  = link_to 'plan', regularmeetings_path(disp_plan: 'on'), method: :get
              - else
                li
                  = link_to 'plan', regularmeetings_path(disp_plan: 'on'), method: :get
              - if current_page?(regularmeetings_path) && @disp_plan.nil?
                li.fh5co-active
                  = link_to 'Participation', regularmeetings_path, method: :get
              - else
                li
                  = link_to 'Participation', regularmeetings_path, method: :get
              li
                = link_to "LOGOUT", destroy_user_session_path, method: :delete
  
            - else
              li
                /= link_to "ログイン", new_user_session_path, method: :get
                a href="#{new_user_session_path}"  ログイン
              li
                /= link_to "無料会員登録", new_user_registration_path, method: :get
                a href="#{new_user_registration_path}"  無料会員登録

  .container
    br
    br
    br
    = yield

    /! Modernizr JS
    script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.2/modernizr.min.js"

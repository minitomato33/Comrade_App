    /! Waypoints
    script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.0/jquery.waypoints.min.js"

    /! Flexslider
    script src="https://cdnjs.cloudflare.com/ajax/libs/flexslider/2.6.0/jquery.flexslider-min.js"

    /! MAIN JS
    = javascript_pack_tag 'ui_templates/main'

    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'

